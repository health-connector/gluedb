


<%= form_for @edi_issue, url:edi_issue_path(@edi_issue) do |f| %>

  <div class="control-group">
    <%= f.label :assigned_to, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :assigned_to, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :resolved_by, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :resolved_by, :class => 'text_field' %>
    </div>
    <div class="control-group">
    <%= f.label :aasm_state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :aasm_state, :class => 'text_field' %>
    </div>
  </div>
  
  <p>
  <div class="form-actions">
    <%= f.submit "update", :action => 'put', :class => 'btn btn-primary' %>
  </div>
  </p>
<% end %>