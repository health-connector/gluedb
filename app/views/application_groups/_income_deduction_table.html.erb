<table class="table table-condensed">
  <thead>
    <tr>
      <th>Kind</th>
      <th>Amount</th>
      <th>Frequency</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Projected?</th>
      <th>Submitted Date</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    <%= table_empty_to_human if incomes.size < 1 %>
    <% incomes.each do |i| %>
    <tr>
      <td><span class="fui-credit-card">&nbsp;</span> <%= i.aasm_state %></td>
      <td><%= i.kind.humanize %></td>
      <td><%= number_to_currency(i.amount_in_dollars) %></td>
      <td><%= i.frequency.humanize %></td>
      <td><%= i.start_date %></td>
      <td><%= i.end_date %></td>
      <td><%= boolean_to_human(i.projected) %></td>
      <td><%= i.submitted_date %></td>
      <% i.comments.each do |c| %>
        <%= "Show comment here" %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
