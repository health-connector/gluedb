- if !employer_with_office_locations.employer_office_locations.blank?
  %office_locations
    - employer_with_office_locations.employer_office_locations.each do |location|
      %office_location  
        %name= location.name if location.name
        %primary= location.is_primary if location.is_primary      
        - if !location.address.blank?
          %address
            %type= location.address.address_type if location.address.address_type
            %address_line_1= location.address.address_1 if location.address.address_1
            %address_line_2= location.address.address_2 if location.address.address_2
            %address_line_3= location.address.address_3 if location.address.address_3
            %location_city_name= location.address.city if  location.address.city
            %location_county_code= location.address.county if location.address.county
            %location_state_code= location.address.location_state_code if location.address.location_state_code
            %postal_code= location.address.zip if location.address.zip
        - if !location.phone.blank?
          %phone
            %type= location.phone.phone_type if location.phone.phone_type
            %country_code= location.phone.country_code if location.phone.country_code
            %area_code= location.phone.area_code if location.phone.area_code
            %phone_number= location.phone.phone_number if location.phone.phone_number
            %full_phone_number= nil
            %extension= location.phone.extension if location.phone.extension
            %is_preferred= location.phone.primary if location.phone.primary
