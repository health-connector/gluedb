<%- model_class = EdiOpsTransaction -%>
<%t '.title', :default => model_class.model_name.human.titleize %>
<div class="page-header">
  <%= render 'shared/breadcrumb', crumbs: [@edi_issue.enrollment_group_uri] %>
</div>

<div class="row">
  <div class="col-md-4">
    <dl class="dl-horizontal">
      <dt><%= model_class.human_attribute_name(:assigned_to) %>:</dt>
      <dd><%= @edi_issue.assigned_to %></dd>
      <dt><%= model_class.human_attribute_name(:resolved_by) %>:</dt>
      <dd><%= @edi_issue.resolved_by %></dd>
      <dt><%= model_class.human_attribute_name(:aasm_state) %>:</dt>
      <dd><%= @edi_issue.aasm_state %></dd>
      <dd><%= link_to "Edit", edit_edi_issue_path(@edi_issue), class: "btn btn-primary", remote: true %></dd>
    </dl>

  </div>

  <div class="col-md-8">
   <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <span class="fui-document">&nbsp;</span>
        Headers
      </h3>
    </div>
    <div class="panel-body">
      <pre><code class = 'json' ><%= @edi_issue.payload.to_json%></code></pre>
    </div>
  </div>
  </div>
</div>

<div class="col-md-12">

  <div class="well well-sm default">
    <div class="form-actions">
     <%= link_to t('.back', :default => t("helpers.links.back")), edi_issues_path, :class => 'btn btn-primary'  %>
   </div>
 </div>
</div>
