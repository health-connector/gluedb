<div class="col-md-6 col-md-offset-3">

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), layout: :horizontal, :html => { :method => :put }) do |f| %>
  <div class="jumbotron">
  <div class='panel-body'><h3>Change your password</h3></div>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, :autofocus => true %>

    <%= f.password_field :password_confirmation %>

    <div class="form-group">
      <div class="col-md-offset-3 col-md-9">
        <%= submit_tag "Change my password", class: "btn btn-primary"  %>
        <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-default" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
  </div>
  </div>

</div>