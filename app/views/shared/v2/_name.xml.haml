%person_surname= object.name_last
%person_given_name= object.name_first
- if object.name_middle.present?
  %person_middle_name= object.name_middle
- if object.name_full.present?
  %person_full_name= object.name_full
- if object.name_pfx.present?
  %person_name_prefix_text= object.name_pfx
- if object.name_sfx.present?
  %person_name_suffix_text= object.name_sfx
- if object.alternate_name.present?
  %person_alternate_name= object.alternate_name
