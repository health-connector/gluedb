%n1:renewals{"xmlns:n1" => "http://openhbx.org/api/terms/1.0", "xmlns:xsi" => "http://www.w3.org/2001/XMLSchema-instance", "xsi:schemaLocation" => "http://openhbx.org/api/terms/1.0 policy.xsd"}
  - @renewals.each_pair do |policy, renewal|
    %n1:renewal
      %n1:current_policy
        %n1:policy
          = render 'api/v2/policies/policy_detail', policy: policy
      %n1:renewal_policy
        %n1:policy
          - unless renewal.subscriber.nil?
            = render 'api/v2/renewal_policies/renewal_detail', policy: renewal
          - else
            = render 'api/v2/renewal_policies/renewal_errors', policy: renewal